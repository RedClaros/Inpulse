// prisma/schema.prisma - CORRECTED and COMPLETE

generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String        @id @default(uuid())
  email           String        @unique
  firstName       String
  lastName        String
  avatar          String?
  role            String   	@default("Member")
  passwordHash    String
  plan            String        @default("Trial")
  planExpiresAt   DateTime?                     
  stripeCustomerId String?      @unique      
  status          String        @default("UNVERIFIED")
  verificationPin String?
  pinExpiresAt    DateTime?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  campaigns       Campaign[]
  sales           Sale[]
  tasks           Task[]
  integrations    Integration[]
  products        Product[]
  customerJourneys CustomerJourney[]
  teams            Team[]
  conversations    Conversation[]
  messages         Message[]
  notifications    Notification[]
}

model CustomerJourney {
  id              String        @id @default(uuid())
  customerId      String
  conversion      Boolean       @default(false)
  conversionValue Float         @default(0)
  owner           User          @relation(fields: [userId], references: [id])
  userId          String
  touchpoints     Touchpoint[]  // A journey has many touchpoints
}

model Touchpoint {
  id          String          @id @default(uuid())
  platform    String          // e.g., "Instagram", "Google Ads"
  action      String          // e.g., "Ad View", "Purchase"
  timestamp   DateTime        @default(now())
  journey     CustomerJourney @relation(fields: [journeyId], references: [id])
  journeyId   String
}

model Campaign {
  id           String   @id @default(uuid())
  campaignName String
  platform     String
  status       String
  reach        Int
  spend        Float
  sales        Float
  clicks       Int
  conversions  Int
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  owner        User     @relation(fields: [userId], references: [id])
  userId       String
  @@unique([campaignName, platform, userId])
}

// This is the corrected Sale model
model Sale {
  id          String    @id @default(uuid())
  revenue     Float
  createdAt   DateTime  @default(now())
  owner       User      @relation(fields: [userId], references: [id])
  userId      String
  product     Product   @relation(fields: [productId], references: [id])
  productId   String
}

model Task {
  id          String    @id @default(uuid())
  content     String
  status      String    @default("TODO")
  priority    String?
  dueDate     DateTime?
  description String?
  assigneeId  String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  owner       User      @relation(fields: [userId], references: [id])
  userId      String
}

model Integration {
  id           String  @id @default(uuid())
  platform     String
  accessToken  String
  refreshToken String?
  accountName  String
  owner        User    @relation(fields: [userId], references: [id])
  userId       String
  @@unique([userId, platform])
}

// This is the new Product model
model Product {
  id             String   @id @default(uuid())
  name           String   @unique
  inventoryLevel Int
  costPerUnit    Float
  salePrice      Float
  owner          User     @relation(fields: [userId], references: [id])
  userId         String
  sales          Sale[]
}

model Team {
  id    String @id @default(uuid())
  name  String
  users User[] // A team can have many users
}

model Conversation {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  messages Message[]
  participants User[]
}

model Message {
  id        String   @id @default(uuid())
  content   String
  createdAt DateTime @default(now())
  conversation   Conversation @relation(fields: [conversationId], references: [id])
  conversationId String
  sender   User   @relation(fields: [senderId], references: [id])
  senderId String
  fileName  String? // To store the original name of the file. Optional field.
  type      String   @default("TEXT")
}

model Invitation {
  id        String   @id @default(uuid())
  email     String   @unique // Each email can only have one pending invitation
  role      String   // e.g., "Admin", "Member"
  token     String   @unique // The secure, random token for the invite link
  expiresAt DateTime // When the invitation link becomes invalid

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Notification {
  id        String   @id @default(uuid())
  message   String   // The text of the notification, e.g., "Jane assigned you a new task"
  read      Boolean  @default(false) // To track if the user has seen it
  link      String?  // Optional link to navigate to, e.g., "/productivity"
  createdAt DateTime @default(now())

  // Relation to the User who receives the notification
  user   User   @relation(fields: [userId], references: [id])
  userId String
}